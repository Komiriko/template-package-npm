{
	"name": "template-package-npm",
	"version": "1.0.0",
	"description": "A template to create a bun package.",
	"keywords": [
		"pkg"
	],
	"license": "MIT",
	"author": "Komiriko",
	"repository": {
		"type": "git",
		"url": "https://github.com/Komiriko/template-package-npm.git"
	},
	"type": "module",
	"exports": {
		".": "./dist/index.js",
		"./enums": "./dist/enums/index.js",
		"./types": "./dist/types/index.js",
		"./utils": "./dist/utils/index.js"
	},
	"scripts": {
		"build": "bun builder.ts",
		"dev": "bun --watch sandbox/index.ts",
		"docs": "bunx typedoc --tsconfig tsconfig.build.json",
		"fmt:check": "oxfmt --check",
		"fmt": "oxfmt",
		"lint:fix": "oxlint --type-aware --type-check --fix ./source",
		"lint:github": "oxlint --type-aware --type-check --format=github ./source",
		"lint": "oxlint --type-aware --type-check  ./source",
		"test": "bun test --pass-with-no-tests --coverage",
		"test:integration": "bun test $(find test/integration -name '*.spec.ts')",
		"test:unit": "bun test --pass-with-no-tests --coverage $(find test/unit -name '*.spec.ts')"
	},
	"devDependencies": {
		"@types/bun": "^1.3.2",
		"oxfmt": "^0.27.0",
		"oxlint": "^1.42.0",
		"oxlint-tsgolint": "^0.11.3",
		"typescript": "^5.9.3"
	},
	"changelog": {
		"types": {
			"feat": {
				"title": "ğŸš€ Enhancements",
				"semver": "minor"
			},
			"fix": {
				"title": "ğŸ”§ Fixes",
				"semver": "patch"
			},
			"build": {
				"title": "ğŸ“¦ Build",
				"semver": "patch"
			},
			"chore": {
				"title": "ğŸ¦‰ Chore",
				"semver": "patch"
			},
			"ci": {
				"title": "ğŸ¤– CI",
				"semver": "patch"
			},
			"docs": {
				"title": "ğŸ“– Documentation",
				"semver": "patch"
			},
			"examples": {
				"title": "ğŸ€ Examples",
				"semver": "patch"
			},
			"perf": {
				"title": "âš¡ Performance",
				"semver": "patch"
			},
			"refactor": {
				"title": "ğŸ§¹ Refactors",
				"semver": "patch"
			},
			"style": {
				"title": "ğŸ¨ Styles",
				"semver": "patch"
			},
